Host *
  IdentityAgent ~/.1password/agent.sock
  IdentitiesOnly yes
  AddKeysToAgent no

# Personal
Host github-personal
  HostName github.com
  User git
  IdentityFile ~/.ssh/keys/github-personal.pub

# Work (Asta)
Host github-work
  HostName github.com
  User git
  IdentityFile ~/.ssh/keys/github-rogue-m5.pub

Host bitbucket-work
  HostName bitbucket.org
  User git
  IdentityFile ~/.ssh/keys/bitbucket-work.pub

# Default Bitbucket (for git@bitbucket.org URLs)
Host bitbucket.org
  HostName bitbucket.org
  User git
  IdentityFile ~/.ssh/keys/bitbucket-work.pub
