Host *
  IdentityAgent ~/.1password/agent.sock
  IdentitiesOnly yes
  AddKeysToAgent no

# Personal
Host github-personal
  HostName github.com
  User git
  IdentityFile ~/.ssh/keys/github-personal.pub

# Work (Asta)
Host github-work
  HostName github.com
  User git
  IdentityFile ~/.ssh/keys/github-asta.pub

Host bitbucket-work
  HostName bitbucket.org
  User git
  IdentityFile ~/.ssh/keys/bitbucket-asta.pub
